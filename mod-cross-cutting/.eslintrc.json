{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "describe": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeAll": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "require-jsdoc": "error",
        "semi": [
            2,
            "never"
        ],
        "sort-vars": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-func-assign": "error",
        "max-len": [
            "error",
            {
                "code": 150
            }
        ]
    }
}