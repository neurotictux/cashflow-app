{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "describe": "readonly",
        "test": "readonly",
        "expect": "readonly",
        "beforeAll": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "sort-vars": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-func-assign": "error",
        "react/jsx-uses-react": true
    }
}